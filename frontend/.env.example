# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (server-side only, for bypassing RLS)
# Get this from: Supabase Dashboard > Project Settings > API > service_role
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Feature Flags
# Beta 邀請碼機制：新用戶首次登入需要輸入邀請碼
NEXT_PUBLIC_REQUIRE_INVITATION_CODE=true

# Cloudflare Turnstile (機器人檢測)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key
TURNSTILE_SECRET_KEY=your_turnstile_secret_key
